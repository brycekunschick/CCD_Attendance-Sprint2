@model IEnumerable<CCD_Attendance.Models.Event>
@{
    ViewData["Title"] = "Select Event for Attendance";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Details</th>
            <th>Select</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EventDetails</td>
                <td>
                    <a class="btn btn-success" href="@Url.Action("Upload", "Attendance", new { eventId = item.EventId })">Select</a>
                </td>
            </tr>
        }
    </tbody>
</table>

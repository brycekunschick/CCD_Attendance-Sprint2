@model IEnumerable<CCD_Attendance.Models.EventAttendanceViewModel>
@{
    ViewData["Title"] = "View Event Attendance";
}

<style>
    .attendance-btn {
        width: 75px; /* Set a fixed width for all buttons */
        text-align: center; /* Center text inside the button */
    }

    .centered {
        text-align: center; /* Center content of the td */
    }

    .header-with-search {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<h1>@ViewData["Title"]</h1>

<table class="table table-bordered table-striped" id="eventsTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date</th>
            <th>Details</th>
            <th>CCD Notes</th>
            <th>Attendance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EventId</td>
                <td>@item.EventName</td>
                <td>@item.EventDate.ToString("yyyy-MM-dd")</td>
                <td>@item.EventDetails</td>
                <td>@item.EventNotesCCD</td>
                <td class="centered">
                    @if (item.HasAttendance)
                    {
                        <a class="btn btn-secondary attendance-btn" href="@Url.Action("DetailViewAttendance", "Event", new { eventId = item.EventId })">VIEW</a>
                    }
                    else
                    {
                        <text></text>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
